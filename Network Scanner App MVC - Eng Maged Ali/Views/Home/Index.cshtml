@{
    ViewBag.Title = "Network Scanner";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <style>
        /* Add these styles to your CSS file as well */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            z-index: 9999;
        }

        .spinner {
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-radius: 50%;
            border-top: 4px solid white;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }

       
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>@ViewBag.Title</h1>
        </header>

        <div class="content-box">
            <form id="scanForm" method="post" action="@Url.Action("ScanNetwork", "Home")" class="scan-form">
                <input type="submit" value="Scan" class="button" />
            </form>

            @if (ViewBag.Devices != null)
            {
                <table id="deviceTable" class="table">
                    <thead>
                        <tr>
                            <th>IP Address</th>
                            <th>Host Name</th>
                            <th>Latency</th>
                            <th>MAC Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var device in ViewBag.Devices as List<Device>)
                        {
                            <tr>
                                <td>@device.IPAddress</td>
                                <td>@device.HostName</td>
                                <td>@device.Latency</td>
                                <td>@device.MacAddress</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <div id="loadingOverlay" class="loading-overlay">
        <div class="spinner"></div> Loading...
    </div>

    <script>
        document.getElementById('scanForm').addEventListener('submit', function () {
            document.getElementById('loadingOverlay').style.display = 'flex';
        });

        window.addEventListener('load', function () {
            document.getElementById('loadingOverlay').style.display = 'none';
        });
    </script>
</body>
</html>
